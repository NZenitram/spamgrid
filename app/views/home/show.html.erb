<div class="mainbox col-md-6">
  <div class="panel panel-info">

    <div class="panel-heading">
      <div class="panel-title", id="account" >Create Account</div>
    </div>

    <div class="panel-body new-user" id="create-user">
      <%= form_tag "/create_account" do  %>
        <div class="form-group">
          <%= label_tag :username, "Username", class: "control-label col-md-4 required-field" %>
          <%= text_field_tag :username, "", class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :email, "Email", class: "control-label col-md-4 required-field" %>
          <%= text_field_tag :email, "", class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :password, "Password", class: "control-label col-md-4 required-field" %>
          <%= password_field_tag :password, "", class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :password_confirmation, "Confirm Password", class: "control-label col-md-4 required-field" %>
          <%= password_field_tag :password_confirmation, "", class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= submit_tag "Create Account", class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "Send Spam", send_spam_path, class: "btn btn-primary" %>
<%= link_to "Get Key", sign_up_path, class: "btn btn-primary" %>
